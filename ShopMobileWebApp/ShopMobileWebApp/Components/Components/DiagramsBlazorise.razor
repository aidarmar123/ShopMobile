	protected override async Task OnAfterRenderAsync(bool firstRender)
	{
		if (firstRender)
		{
			await HandleRedraw();
		}
	}
	async Task HandleRedraw()
	{
		await lineChart.Clear();
		await lineChart.AddLabelsDatasetsAndUpdate(Labels, new LineChartDataset<double>
			{
				Label = "# of randoms",
				// Data = ,
				Fill = true,
				PointRadius = 3,
				CubicInterpolationMode = "monotone",
			});
	}
}
